<% include ../partials/header %>

  <% if(currentUser && currentUser.isAdmin) { %>
    <h1>Welcome <currentUser.username></currentUser></h1>
  <% } %>


 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Secret Wish</h1>
             <p>
                <a class="btn btn-primary btn-large" href="/requests/new">Add New request</a>
             </p>
             
         </div>
     </header>
     
      
      
           
           <div class="row text-center" style="display:flex; flex-wrap: wrap;">
              <% requests.forEach(function(request){ %>
                  <div class="col-md-3 col-sm-6">
                      <div class="thumbnail">
                         <img src="<%= request.yourEmail %>">
                         <div class="caption">
                             <h4><%= request.yourAadhaar %></h4>
                         </div>
                         <p>
                             <a href="/requests/<%= request._id %>" class="btn btn-primary">More Info</a>
                         </p>
                      </div>
                  </div>
              <% }); %>
          </div>
      </div>
      
      
      <% include ../partials/footer %>
      