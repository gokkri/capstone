<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add a new request</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/requests" method="POST" >
                <div class="form-group">
                    <input class="form-control" type="number" name="youraadhaar" placeholder="your aadhaar">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email"  name="youremail" required placeholder="your email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="deceasedadhaar" placeholder="deceased aadhaar">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="deathcertificate" placeholder="death certificate">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/secrets">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>
