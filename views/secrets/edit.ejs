<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= secret.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/secrets/<%=secret._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="secret[name]" value="<%= secret.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control "type="text"  name="secret[image]" value="<%= secret.image %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="secret[description]" value="<%= secret.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="secret[youraadhaar]" value="<%= secret.yourAadhaar %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="secret[nominee]" value="<%= secret.nominee %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="secret[nomineeaadhaar]" value="<%= secret.nomineeAadhaar %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="secret[nomineeemail]" value="<%= secret.nomineeEmail %>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
                
            </form>
            <a href="/secrets">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>
