<% include ../partials/header %>
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Death Wish</p>
            
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= secret.image %>">
                <div class="caption-full">
                    <h4><a><%=secret.name%></a></h4>
                    <p><%= secret.description %></p>
                    <p>
                            <em>Submitted by: <a href="/users/<%= secret.author.id %>"><%= secret.author.username %></a>
                    </p>
                    
                        <a class="btn btn-warning" href="/secrets/<%= secret._id %>/edit">Edit Secret</a>
                        <form action="/secrets/<%= secret._id %>?_method=DELETE" method="POST">
                            <input type="submit" class="btn btn-danger" value="Delete">
                        </form>
                    
                </div>
            </div>
           </div>
    </div>

<% include ../partials/footer %>